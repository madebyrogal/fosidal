{% extends 'AdminBundle::base.html.twig' %}

{% block body %}
    <h1>Strona</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ page.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ page.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ page.description }}</td>
            </tr>
            <tr>
                <th>Keywords</th>
                <td>{{ page.keywords }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_page_index') }}"  class="btn btn-sm btn-primary">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_page_edit', { 'id': page.id }) }}" class="btn btn-sm btn-success">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="btn btn-sm btn-danger">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
